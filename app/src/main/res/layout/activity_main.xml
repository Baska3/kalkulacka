<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-140dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtVypis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnCE"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnPlusOrMinus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="+/-" />

    <Button
        android:id="@+id/btnNula"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btnPlusOrMinus"
        android:backgroundTint="@color/teal_700"
        android:text="0" />

    <Button
        android:id="@+id/btnBodka"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btnNula"
        android:backgroundTint="@color/teal_700"
        android:text="." />

    <Button
        android:id="@+id/btnRovnaSa"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="17.5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btnBodka"
        android:backgroundTint="#FF9800"
        android:text="=" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnPlusOrMinus"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnPlusOrMinus"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn1"
        android:backgroundTint="@color/teal_700"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnPlusOrMinus"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn2"
        android:backgroundTint="@color/teal_700"
        android:text="3" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnPlusOrMinus"
        android:layout_marginRight="17.5dp"
        android:layout_toRightOf="@+id/btn3"
        android:backgroundTint="#FF9800"
        android:text="+" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn1"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn1"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn4"
        android:backgroundTint="@color/teal_700"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn1"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn5"
        android:backgroundTint="@color/teal_700"
        android:text="6" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn1"
        android:layout_marginRight="17.5dp"
        android:layout_toRightOf="@+id/btn6"
        android:backgroundTint="#FF9800"
        android:text="-" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn4"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn4"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn7"
        android:backgroundTint="@color/teal_700"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn4"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn8"
        android:backgroundTint="@color/teal_700"
        android:text="9" />

    <Button
        android:id="@+id/btnNasobenie"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn4"
        android:layout_marginRight="17.5dp"
        android:layout_toRightOf="@+id/btn9"
        android:backgroundTint="#FF9800"
        android:text="X" />

    <Button
        android:id="@+id/btnCE"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn7"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#FF9800"
        android:text="CE" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn7"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btnCE"
        android:backgroundTint="#FF9800"
        android:text="C" />

    <Button
        android:id="@+id/btnNaDruhu"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn7"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btnC"
        android:backgroundTint="#FF9800"
        android:text="xÂ²" />

    <Button
        android:id="@+id/btnDeleno"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn7"
        android:layout_marginRight="17.5dp"
        android:layout_toRightOf="@+id/btnNaDruhu"
        android:backgroundTint="#FF9800"
        android:text="/" />


</RelativeLayout>